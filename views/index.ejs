<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat-App</title>
    <link rel="stylesheet" href="/style.css">
    
</head>
<body>
    <h3>All Chats</h3>
    <form action="/chats/new" method="get">
        <button class="topBtn">New-Chat</button>
    </form>
    <%for(let chat of chats){%>
        <div class="chatbox">
            <p>From : <%= chat.from %></p>
            <p>To : <%= chat.to %></p>
            <p>Message : <%= chat.msg %></p>
            <form action="chats/<%=chat._id%>/edit" method="get">
                <button>Edit</button>
            </form>
            <form action="chats/<%=chat._id%>?_method=DELETE" method="post">
                <button>Delete</button>
            </form>
            <hr>
            <p>Time : <%= chat.created_at.toString().split(" ")[4].slice(0,5) %></p>
              
        </div>
        
        
    <%}%>
</body>
</html>
